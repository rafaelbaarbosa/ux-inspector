{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
			"scripts/background.js",
			"scripts/functions/helpAndDoc.js",
			"scripts/functions/findAndUndoErrors.js",
			"scripts/functions/preventErrors.js",
			"scripts/functions/systemState.js",
			"scripts/functions/patternsAndFreedom.js",
			"scripts/functions/flexibility.js",
			"scripts/report.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications",
		"activeTab",
		"file:///*",
		"file://*",
		"<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
				"https://*/*",
				"file://*"
      ],
      "js": [
				"scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Test",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
